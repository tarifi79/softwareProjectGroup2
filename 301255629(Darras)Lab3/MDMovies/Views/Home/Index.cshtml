@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model IEnumerable<PlaygroupConnect.Models.Post>

@{
    var favoritePostIds = ViewBag.FavoritePostIds as List<int>;
}


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Activites List</h2>
            </div>
        </div>
    </div>
    <div class="card-body pt-3">
        <div class="container mt-2">
            <div class="row">
                @foreach (var post in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@post.Owner</h5>
                            <p class="card-text">@post.Content</p>
                            @if (User.Identity.IsAuthenticated && favoritePostIds.Contains(post.Id))
                            {
                                <!-- Display that this post is a favorite -->
                                <i class="bi bi-heart-fill"></i> <!-- Example: Using Bootstrap Icons -->
                            }
                            
                                <!-- ... other post details ... -->
                                @if (post.Reported)
                                {
                                <span class="reported-icon">🚩Reported🚩</span> <!-- Example icon, you can replace it with an actual icon or image -->
                                }
                            
                            @if (User.Identity.IsAuthenticated)
                            {

                                <a asp-action="UpdateActivity" asp-route-id="@post.Id" class="btn btn-info col-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-success col-1">


                                    <i class="bi bi-arrows-angle-expand"></i>
                                </a>
                                <!-- Delete button with icon -->
                                <form asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger col-1" onclick="return confirm('Are you sure you want to delete this?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
 
            </div>
        </div>




    </div>
</div>





