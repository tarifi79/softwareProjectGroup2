@model PlaygroupConnect.Models.Post

@{
    var isFavorite = ViewBag.IsFavorite as bool?;
}



<div>
    <h4>Post</h4>
    <hr />
    <div class="col-md-8 text-center">
        <img src="@Url.Content("~" + Model.ImagePath)" class="img-fluid" alt="Responsive image">
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated)
{
    if (isFavorite.HasValue && isFavorite.Value)
    {
        <form asp-action="RemoveFromFavorites" method="post">
            <input type="hidden" name="postId" value="@Model.Id" />
            <button type="submit" class="btn btn-secondary">
                <i class="bi bi-heartbreak-fill"></i> Remove from Favorites
            </button>
        </form>
    }
    else
    {
        <form asp-action="AddToFavorites" method="post">
            <input type="hidden" name="postId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-heart-fill"></i> Add to Favorites
            </button>
        </form>
    }
}
<!-- Check if the post is reported -->
@if (Model.Reported)
{
    <p>This post is under review.</p>
}
else
{
    <!-- Button to report the post -->
    <form asp-action="ReportPost" method="post">
        <input type="hidden" name="postId" value="@Model.Id" />
        <button type="submit" class="btn btn-warning">Report Post</button>
    </form>
}

<div>
    <h4>Comments</h4>
    @foreach (var comment in Model.Comments)
    {
        <p>@comment.Owner: @comment.Content</p>
        <p>Posted on: @comment.Time.ToString("g")</p>
        <!-- Display other comment properties as needed -->
    }
</div>

<a asp-action="Index">Back to List</a>

<form asp-action="AddComment" method="post">
    <input type="hidden" name="PostId" value="@Model.Id" />

  

    <div class="form-group">
        <label for="Content">Comment</label>
        <textarea class="form-control" id="Content" name="Content" required></textarea>
    </div>

    <label for="Rating">Rating:</label>
    <select class="form-control" id="Rating" name="Rating">
        <option value="1">1 Star</option>
        <option value="2">2 Stars</option>
        <option value="3">3 Stars</option>
        <option value="4">4 Stars</option>
        <option value="5">5 Stars</option>
    </select>

    <button type="submit" class="btn btn-primary">Submit Comment</button>
</form>
